<!-- Hero Section - Responsive -->
<div class="relative pt-20 md:pt-32 pb-2 md:pb-4 overflow-hidden">
  <!-- Desktop: 3 Column Image Grid - Hidden on mobile -->
  <div class="hidden md:block relative max-w-7xl mx-auto px-4 min-h-[600px] mb-0">
    <div class="grid grid-cols-3 gap-0">

      <!-- Column 1: Left -->
      <div class="relative min-h-[500px]">
        <!-- Image 1 - Top Left -->
        <div class="absolute top-0 left-8 w-full transform rotate-3 hover:rotate-0 transition-transform z-10">
          <%= image_tag "hero-image.jpg", alt: "CR4FTS Vision", class: "w-full h-64 object-cover rounded-lg shadow-lg border-2 border-white" %>
        </div>

        <!-- Image 2 - Middle, overlapping into center column -->
        <div class="absolute top-60 -right-24 w-full transform -rotate-3 hover:-rotate-1 transition-transform z-20">
          <%= image_tag "hero-image-2.jpg", alt: "CR4FTS Innovation", class: "w-full h-64 object-cover rounded-lg shadow-lg border-2 border-white" %>
        </div>
      </div>

      <!-- Column 2: Center -->
      <div class="relative" style="min-height: 500px;">
        <!-- Image 1 - Top -->
        <div class="absolute top-0 left-0 w-full transform -rotate-2 hover:rotate-0 transition-transform z-12">
          <%= image_tag "hero-image-3.jpg", alt: "CR4FTS Building", class: "w-full h-64 object-cover rounded-lg shadow-lg border-2 border-white" %>
        </div>

        <!-- Image 2 - Bottom, overlapping into right column -->
        <div class="absolute top-60 -right-10 w-full transform rotate-4 hover:rotate-2 transition-transform z-25">
          <%= image_tag "hero-image-4.jpg", alt: "CR4FTS Development", class: "w-full h-64 object-cover rounded-lg shadow-lg border-2 border-white" %>
        </div>
      </div>

      <!-- Column 3: Right -->
      <div class="relative" style="min-height: 500px;">
        <!-- Image 1 - Top -->
        <div class="absolute top-4 -left-4 w-full transform rotate-3 hover:rotate-1 transition-transform z-12">
          <%= image_tag "hero-image-5.jpg", alt: "CR4FTS Innovation", class: "w-full h-64 object-cover rounded-lg shadow-lg border-2 border-white" %>
        </div>

        <!-- Image 2 - Bottom, overlapping back into center -->
        <div class="absolute top-60 -left-16 w-full transform -rotate-2 hover:rotate-0 transition-transform z-18">
          <%= image_tag "hero-image-6.jpg", alt: "CR4FTS Strategy", class: "w-full h-64 object-cover rounded-lg shadow-lg border-2 border-white" %>
        </div>
      </div>

    </div>
  </div>

  <!-- Mobile: 4 Overlapping Cards - Hidden on desktop -->
  <div class="block md:hidden relative max-w-7xl mx-auto px-4 min-h-[400px] mb-0">
    <div class="relative min-h-[500px]">

      <!-- Image 1 - Top Left -->
      <div class="absolute top-0 left-2 w-40 transform rotate-3 hover:rotate-0 transition-transform z-10">
        <%= image_tag "hero-image.jpg", alt: "CR4FTS Vision", class: "w-full h-40 object-cover rounded-lg shadow-lg border-2 border-white" %>
      </div>

      <!-- Image 2 - Top Right -->
      <div class="absolute top-8 right-2 w-40 transform -rotate-2 hover:rotate-0 transition-transform z-15">
        <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=500&h=500&fit=crop" alt="Data" class="w-full h-40 object-cover rounded-lg shadow-lg border-2 border-white">
      </div>

      <!-- Image 3 - Middle Left -->
      <div class="absolute top-32 left-2 w-40 transform -rotate-2 hover:rotate-0 transition-transform z-20">
        <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=500&h=500&fit=crop" alt="Team" class="w-full h-40 object-cover rounded-lg shadow-lg border-2 border-white">
      </div>

      <!-- Image 4 - Bottom Right -->
      <div class="absolute top-40 right-5 w-40 transform rotate-2 hover:rotate-0 transition-transform z-25">
        <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=500&fit=crop" alt="Product" class="w-full h-40 object-cover rounded-lg shadow-lg border-2 border-white">
      </div>

    </div>
  </div>

  <!-- Headline and Description -->
  <div class="text-center bg-[#FAFAFA] pt-0">
    <h2 class="text-3xl md:text-4xl lg:text-5xl font-black leading-snug mb-2 md:mb-3 px-4" style="color: #17233C; letter-spacing: -0.02em; word-spacing: -0.05em;">
      We take the 1% odds.
    </h2>

    <div class="max-w-5xl mx-auto px-4">
      <p class="text-2xl md:text-3xl lg:text-4xl leading-relaxed font-light" style="color: #17233C; opacity: 0.8;">
        Build what the probabilities say you can't.
      </p>
    </div>
  </div>
</div>
