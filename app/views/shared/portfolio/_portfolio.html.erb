    // Venture data
    const ventures = {
      dataflow: {
        title: 'DataFlow',
        description: 'Next-gen analytics platform for data-driven decisions. Transform your raw data into actionable insights with our powerful visualization and reporting tools.',
        image: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=1200&h=1200&fit=crop'
      },
      buildkit: {
        title: 'BuildKit',
        description: 'Developer tools that accelerate your development workflow. Build faster, deploy smarter, and ship with confidence.',
        image: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&h=800&fit=crop'
      },
      teamsync: {
        title: 'TeamSync',
        description: 'Collaboration suite that brings your team together. Real-time communication, project management, and workflow automation in one place.',
        image: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=800&h=800&fit=crop'
      },
      marketedge: {
        title: 'MarketEdge',
        description: 'E-commerce platform designed for modern retailers. Sell anywhere, manage everything, grow your business.',
        image: 'https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=800&h=800&fit=crop'
      },
      codelab: {
        title: 'CodeLab',
        description: 'Interactive coding education platform. Learn to code through hands-on projects and real-world challenges.',
        image: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=800&h=800&fit=crop'
      },
      finflow: {
        title: 'FinFlow',
        description: 'Financial analytics and forecasting tools. Make smarter financial decisions with predictive insights.',
        image: 'https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=600&h=600&fit=crop'
      },
      cloudsync: {
        title: 'CloudSync',
        description: 'Cloud infrastructure management platform. Deploy, scale, and monitor your applications with ease.',
        image: 'https://images.unsplash.com/photo-1451187580459-43490279c0fa?w=600&h=600&fit=crop'
      },
      designhub: {
        title: 'DesignHub',
        description: 'Professional design tools for creative teams. Collaborate, iterate, and deliver stunning designs faster.',
        image: 'https://images.unsplash.com/photo-1558655146-9f40138edfeb?w=600&h=600&fit=crop'
      },
      taskflow: {
        title: 'TaskFlow',
        description: 'Productivity suite that helps you get more done. Streamline your workflow and boost team efficiency.',
        image: 'https://images.unsplash.com/photo-1484480974693-6ca0a78fb36b?w=600&h=600&fit=crop'
      },
      metricspro: {
        title: 'MetricsPro',
        description: 'Business intelligence platform for data-driven leaders. Track KPIs, analyze trends, and make informed decisions.',
        image: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=600&h=600&fit=crop'
      },
      sociallink: {
        title: 'SocialLink',
        description: 'Professional networking platform for the modern workforce. Build connections, share knowledge, and grow your career.',
        image: 'https://images.unsplash.com/photo-1611162617474-5b21e879e113?w=600&h=600&fit=crop'
      }
    };

    // Open modal
    triggers.forEach(trigger => {
      trigger.addEventListener('click', function() {
        const ventureId = this.dataset.venture;
        const venture = ventures[ventureId];

        if (venture) {
          modalTitle.textContent = venture.title;
          modalDescription.textContent = venture.description;
          modalImage.src = venture.image;
          modalImage.alt = venture.title;

          modal.classList.add('show');
          document.body.style.overflow = 'hidden';
        }
      });
    });

    // Close modal
    closeBtn.addEventListener('click', function() {
      modal.classList.remove('show');
      document.body.style.overflow = '';
    });

    // Close on background click
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        modal.classList.remove('show');
        document.body.style.overflow = '';
      }
    });

    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal.classList.contains('show')) {
        modal.classList.remove('show');
        document.body.style.overflow = '';
      }
    });
  });
</script>
