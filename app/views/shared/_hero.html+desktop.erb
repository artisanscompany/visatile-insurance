<!-- Hero Section - Desktop -->
<div class="relative py-20 md:py-32 overflow-hidden">
  <%= render "shared/hero_content", mobile: false %>

  <!-- 3 Column Image Grid - Desktop -->
  <div class="relative max-w-7xl mx-auto px-4 min-h-[600px]">
    <div class="grid grid-cols-3 gap-0">

      <!-- Column 1: Left -->
      <div class="relative min-h-[500px]">
        <!-- Image 1 - Top Left -->
        <div class="absolute top-0 left-8 w-full transform rotate-3 hover:rotate-0 transition-transform z-10">
          <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=500&h=500&fit=crop" alt="Analytics" class="w-full h-80 object-cover rounded-lg shadow-lg border-2 border-white">
        </div>

        <!-- Image 2 - Middle, overlapping into center column -->
        <div class="absolute top-60 -right-24 w-full transform -rotate-3 hover:-rotate-1 transition-transform z-20">
          <img src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?w=500&h=500&fit=crop" alt="Team" class="w-full h-80 object-cover rounded-lg shadow-lg border-2 border-white">
        </div>
      </div>

      <!-- Column 2: Center -->
      <div class="relative" style="min-height: 500px;">
        <!-- Image 1 - Top -->
        <div class="absolute top-0 left-0 w-full transform -rotate-2 hover:rotate-0 transition-transform z-12">
          <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=400&fit=crop" alt="Product" class="w-full h-80 object-cover rounded-lg shadow-lg border-2 border-white">
        </div>

        <!-- Image 2 - Bottom, overlapping into right column -->
        <div class="absolute top-60 -right-10 w-full transform rotate-4 hover:rotate-2 transition-transform z-25">
          <img src="https://images.unsplash.com/photo-1461749280684-dccba630e2f6?w=500&h=400&fit=crop" alt="Development" class="w-full h-80 object-cover rounded-lg shadow-lg border-2 border-white">
        </div>
      </div>

      <!-- Column 3: Right -->
      <div class="relative" style="min-height: 500px;">
        <!-- Image 1 - Top -->
        <div class="absolute top-4 -left-4 w-full transform rotate-3 hover:rotate-1 transition-transform z-12">
          <img src="https://images.unsplash.com/photo-1553877522-43269d4ea984?w=500&h=400&fit=crop" alt="Innovation" class="w-full h-80 object-cover rounded-lg shadow-lg border-2 border-white">
        </div>

        <!-- Image 2 - Bottom, overlapping back into center -->
        <div class="absolute top-72 -left-16 w-full transform -rotate-2 hover:rotate-0 transition-transform z-18">
          <img src="https://images.unsplash.com/photo-1557804506-669a67965ba0?w=500&h=400&fit=crop" alt="Strategy" class="w-full h-80 object-cover rounded-lg shadow-lg border-2 border-white">
        </div>
      </div>

    </div>
  </div>
</div>
