<header class="sticky top-0 z-50 w-full" style="background-color: #FAFAFA;" data-controller="mobile-menu">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <%= link_to root_path, class: "flex items-center space-x-2 group" do %>
          <span class="text-3xl font-black tracking-tight" style="color: #17233C;">
            CR4FTS
          </span>
        <% end %>
      </div>

      <!-- Desktop Navigation Buttons -->
      <div class="hidden md:flex items-center gap-4">
        <a href="https://workingstations.com/cr4fts" target="_blank" rel="noopener noreferrer" class="px-6 py-3 text-white font-bold rounded-xl hover:shadow-xl transition-all" style="background: #17233C;">
          Makerspace
        </a>
        <a href="#ventures" class="px-6 py-3 bg-white font-bold rounded-xl hover:shadow-xl transition-all" style="color: #17233C;">
          Bets
        </a>
        <a href="#contact" class="px-6 py-3 bg-white font-bold rounded-xl hover:shadow-xl transition-all" style="color: #17233C;">
          Contact
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button data-action="click->mobile-menu#toggle" class="md:hidden p-2 rounded-lg hover:bg-black/5 transition-colors" style="color: #17233C;">
        <svg data-mobile-menu-target="menuIcon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
        <svg data-mobile-menu-target="closeIcon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation Menu -->
    <div data-mobile-menu-target="menu" class="hidden md:hidden pb-4">
      <div class="flex flex-col gap-3">
        <a href="https://workingstations.com/cr4fts" target="_blank" rel="noopener noreferrer" data-action="click->mobile-menu#close" class="px-6 py-3 text-white font-bold rounded-xl hover:shadow-xl transition-all text-center" style="background: #17233C;">
          Makerspace
        </a>
        <a href="#ventures" data-action="click->mobile-menu#close" class="px-6 py-3 bg-white font-bold rounded-xl hover:shadow-xl transition-all text-center" style="color: #17233C;">
          Bets
        </a>
        <a href="#contact" data-action="click->mobile-menu#close" class="px-6 py-3 bg-white font-bold rounded-xl hover:shadow-xl transition-all text-center" style="color: #17233C;">
          Contact
        </a>
      </div>
    </div>
  </nav>
</header>
